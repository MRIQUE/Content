    <script>
        document.addEventListener('DOMContentLoaded', () => {

            const CHART_COLORS = {
                red: '#FF6B6B',
                yellow: '#FFD166',
                green: '#06D6A0',
                blue: '#118AB2',
                darkBlue: '#073B4C',
                lightGray: '#F1F5F9'
            };

            function wrapLabels(label, maxLength) {
                if (typeof label !== 'string' || label.length <= maxLength) {
                    return label;
                }
                const words = label.split(' ');
                const lines = [];
                let currentLine = '';
                words.forEach(word => {
                    if ((currentLine + word).length > maxLength && currentLine.length > 0) {
                        lines.push(currentLine.trim());
                        currentLine = '';
                    }
                    currentLine += word + ' ';
                });
                lines.push(currentLine.trim());
                return lines;
            }
            
            const defaultTooltipCallback = {
                plugins: {
                    legend: {
                         position: 'bottom',
                    },
                    tooltip: {
                        callbacks: {
                            title: function(tooltipItems) {
                                const item = tooltipItems[0];
                                let label = item.chart.data.labels[item.dataIndex];
                                if (Array.isArray(label)) {
                                    return label.join(' ');
                                } else {
                                    return label;
                                }
                            }
                        }
                    }
                }
            };
            
            new Chart(document.getElementById('taskChart'), {
                type: 'bar',
                data: {
                    labels: ['Trimestre 1', 'Trimestre 2', 'Trimestre 3', 'Trimestre 4'],
                    datasets: [{
                        label: 'Projets Strat√©giques (Cailloux)',
                        data: [60, 40, 25, 10],
                        backgroundColor: CHART_COLORS.blue,
                    }, {
                        label: 'Petites demandes (Sable)',
                        data: [40, 60, 75, 90],
                        backgroundColor: CHART_COLORS.yellow,
                    }]
                },
                options: {
                    ...defaultTooltipCallback,
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        x: {
                            stacked: true,
                        },
                        y: {
                            stacked: true,
                            ticks: {
                                callback: function(value) { return value + "%" }
                            },
                            title: {
                                display: true,
                                text: '% du temps de la DSI'
                            }
                        }
                    }
                }
            });

            new Chart(document.getElementById('npsChart'), {
                type: 'doughnut',
                data: {
                    labels: ['NPS (√âquipes satisfaites)', '...'],
                    datasets: [{
                        data: [92, 8],
                        backgroundColor: [CHART_COLORS.green, CHART_COLORS.lightGray],
                        borderColor: ['#FFFFFF'],
                        borderWidth: 4
                    }]
                },
                options: {
                    ...defaultTooltipCallback,
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        ...defaultTooltipCallback.plugins,
                        title: {
                            display: false
                        }
                    },
                    cutout: '70%'
                }
            });

            new Chart(document.getElementById('prChart'), {
                type: 'line',
                data: {
                    labels: ['Jan', 'F√©v', 'Mar', 'Avr', 'Mai', 'Juin'],
                    datasets: [{
                        label: 'Mentions Presse & LinkedIn',
                        data: [12, 19, 33, 58, 89, 152],
                        fill: true,
                        backgroundColor: 'rgba(255, 107, 107, 0.2)',
                        borderColor: CHART_COLORS.red,
                        tension: 0.4,
                        pointBackgroundColor: CHART_COLORS.red,
                        pointRadius: 5
                    }]
                },
                options: {
                    ...defaultTooltipCallback,
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: true,
                            title: {
                                display: true,
                                text: 'Nombre de mentions'
                            }
                        }
                    }
                }
            });

            new Chart(document.getElementById('budgetChart'), {
                type: 'pie',
                data: {
                    labels: [
                        wrapLabels('Consultants Externes & ESN', 16),
                        wrapLabels('D√©veloppement Comp√©tences Internes', 16), 
                        wrapLabels('Accompagnement au changement (slides)', 16)
                    ],
                    datasets: [{
                        label: 'Budget de transformation',
                        data: [80, 15, 5],
                        backgroundColor: [
                            CHART_COLORS.blue,
                            CHART_COLORS.red,
                            CHART_COLORS.yellow
                        ],
                         borderColor: ['#FFFFFF'],
                        borderWidth: 4
                    }]
                },
                options: {
                    ...defaultTooltipCallback,
                    responsive: true,
                    maintainAspectRatio: false,
                }
            });
        });
    </script>

